{
  "name": "cocktail-mastery",
  "version": "3.0.0",
  "description": "How to use create-react-app with a custom Node API on Heroku",
  "engines": {
    "node": "10.x"
  },
  "scripts": {
    "start": "node server",
    "server": "nodemon server",
    "build": "npm install --prefix react-ui && npm run build --prefix react-ui",
    "full-install": "npm install --prefix react-ui && npm install",
    "dev": "concurrently \"npm run server\" \"npm start --prefix react-ui\"",
    "heroku-postbuild": "npm install --prefix react-ui && npm run build --prefix react-ui"
  },
  "cacheDirectories": [
    "node_modules",
    "react-ui/node_modules"
  ],
  "dependencies": {
    "express": "^4.16.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mars/heroku-cra-node.git"
  },
  "keywords": [
    "node",
    "heroku",
    "create-react-app",
    "react"
  ],
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^5.2.0",
    "nodemon": "^2.0.4"
  }
}
